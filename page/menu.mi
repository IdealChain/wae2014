<div class="menu">
<h1>Menu</h1>
<ul>
% foreach my $id (sort keys $pages) {
  <li>
    <a href="index?page_id=<% $id %>">
      <% $pages->{$id}->{'title'} %>
    </a>
  </li>
% }
</ul>
</div>

<% scalar(keys $pages) %> pages are here.

<%init>
  my $dbh = Ws14::DBI->dbh();
  my $sth = $dbh->prepare("select id, parent_id, title from wae07_pages");
  $sth->execute();
  my $pages = $sth->fetchall_hashref("id");
</%init>
